<h2>장바구니</h2>

<table border="1">
  <tr>
    <th>ID</th><th>Name</th><th>Price</th><th>Quantity</th>
  </tr>
  <% cart.forEach(item => { %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <td><%= item.quantity %></td>
    </tr>
  <% }) %>
</table>

<h3>Total: <%= total %>원</h3>
<a href="/products">← 상품 목록</a>
